import java.util.Scanner;
public class h{
	public static void main(String[] args){ 
		//创建scanner对象。用于从控制台读取输入
		Scanner scanner = new Scanner(System.in);
		//提示用户输入
		System.out.print("请输入10个整数：>");
		//初始化整数数组
		int []a = new int [10];
		int i = 0;
		//读取用户输入并存储在数组中
		for(i = 0; i < 10; i++) {
			a[i] = scanner.nextInt();
		}
		//计算数组的元素组合
		double sum = 0;
		for(i = 0; i < 10; i++) {
			sum += a[i];
		}
		//计算平均值
		double avg = sum / 10;
		//输出平均值
		System.out.println(""+avg);
	}
}
